<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e8e8e8"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40sp"
        android:background="#000000"
        android:gravity="right"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/seekIV"
            android:layout_width="40sp"
            android:layout_height="40sp"
            android:src="@drawable/common_ic_googleplayservices" />

        <ImageView
            android:id="@+id/taskbarIV"
            android:layout_width="40sp"
            android:layout_height="40sp"
            android:layout_marginRight="10dp"
            android:src="@drawable/common_ic_googleplayservices" />
    </LinearLayout>

    <TextView
        android:id="@+id/nowTV"
        android:textSize="12dp"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:gravity="center_vertical"
        android:text="定位" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:background="#ffffff"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/commissionLL"
            android:layout_width="0dp"
            android:layout_height="47dp"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/commissionTV"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="待办"
                android:textColor="#ff8400"
                android:textSize="20dp" />

            <TextView

                android:id="@+id/commissionTwoTV"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#ff8400" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/alreadyLL"
            android:layout_width="0dp"
            android:layout_height="47dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/alreadyTV"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="已办"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/alreadyTwoTV"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#ffffff" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/allLL"
            android:layout_width="0dp"
            android:layout_height="47dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingRight="10dp">

            <TextView
                android:id="@+id/allTV"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="全部"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/allTwoTV"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#ffffff" />
        </LinearLayout>
    </LinearLayout>

    <com.xiang.view.NoScrollViewPager
        android:id="@+id/twoPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="30dp"
        android:background="#ffffff"></com.xiang.view.NoScrollViewPager>
</LinearLayout>